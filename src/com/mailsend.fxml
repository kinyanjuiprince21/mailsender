<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MailSendController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="lblMessage">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label prefWidth="70.0" text="From:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="txtFrom" disable="true" editable="false" prefWidth="300.0" text="sender's_email@gmail.com" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0">
         <children>
            <Label prefWidth="70.0" text="To:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="txtTo" prefWidth="300.0" promptText="Enter your email" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="34.0">
         <children>
            <Label prefWidth="70.0" text="Subject:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="txtSubject" prefWidth="300.0" />
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
         <children>
            <Label style="-fx-font-weight: bold;" text="Body" />
            <HTMLEditor fx:id="htmEditor" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="200.0" prefWidth="506.0" />
         </children>
      </VBox>
      <VBox>
         <children>
            <VBox />
            <HBox>
               <children>
                  <Button fx:id="btnAttach" mnemonicParsing="false" text="attach" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnSend" mnemonicParsing="false" text="send" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
